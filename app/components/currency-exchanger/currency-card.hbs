<div class='card currency-card'>
  <div class='card-body'>
    <h5
      class='card-title text-uppercase text-center pb-1 border-bottom border-2'
    >{{@title}}</h5>
    <div class='input-group mb-2'>
      {{#let (unique-id) as |selectorId|}}
        <label class='input-group-text' for={{selectorId}}>
          <img src={{@fromCurrency.img}} alt='flag_img' />
        </label>
        <select
          class='form-select'
          id={{selectorId}}
          {{on 'change' @onSelectorChange}}
        >
          {{#each @currencies as |currency|}}
            <option
              value={{currency.code}}
              selected={{eq currency.code @fromCurrency.code}}
            >{{currency.code}} [{{currency.description}}]</option>
          {{/each}}
        </select>
      {{/let}}
    </div>
    <div class='mb-2'>
      1
      <span class='fw-bold'>{{@fromCurrency.code}}</span>
      =
      {{@exchangeRate}}
      <span class='fw-bold'>{{@toCurrency.code}}</span>
    </div>
    <div class='input-group'>
      {{#let (unique-id) as |inputId|}}
        <label class='input-group-text' for={{inputId}}>
          <span>{{@fromCurrency.code}}</span>
        </label>
        <input
          id={{inputId}}
          type='number'
          class='form-control'
          placeholder='Amount'
          value={{@amount}}
          {{on 'input' @onInputChange}}
        />
      {{/let}}
    </div>
  </div>
</div>