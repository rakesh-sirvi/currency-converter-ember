{{page-title 'EmberApp'}}

<div class='theme-{{this.theme}}'>
  <nav
    class='navbar sticky-top navbar-{{this.theme}}
      bg-{{this.theme}}
      justify-content-between'
  >
    <div class='container-fluid navbar-content'>
      <Sidebar />
      <img src='assets/images/logo.png' alt='Currency' class='logo' />
      <div class='d-flex justify-content-center align-items-center'>
        <img
          class='theme-image'
          src='assets/images/light-theme.png'
          alt='Light mode'
        />
        <label class='theme-toggle'>
          <input
            id='toggler'
            type='checkbox'
            checked={{if (eq this.theme 'light') false true}}
            {{on 'change' this.changeTheme}}
          />
          <span class='slider round'></span>
        </label>
        <img
          class='theme-image'
          src='assets/images/dark-theme.png'
          alt='Dark mode'
        />
      </div>
    </div>
  </nav>

  <div id='main'>
    <div class='container py-3'>
      <div class='row mb-4'>
        <div class='col'>
          <CurrencyExchanger @from='USD' @to='INR' />
        </div>
      </div>

      <div class='row'>
        <div class='col-12 col-md-6 col-lg-5'>
          <WeatherComponent::Weather />
        </div>

        <div class='col-12 col-md-6 col-lg-7'>
          <NewsComponent::News />
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}